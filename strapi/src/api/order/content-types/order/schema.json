{
  "kind": "collectionType",
  "collectionName": "orders",
  "info": {
    "singularName": "order",
    "pluralName": "orders",
    "displayName": "Order",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "reports": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::report.report"
    },
    "fullfillmentStatus": {
      "type": "enumeration",
      "enum": [
        "INITIATED",
        "PENDING",
        "SUCCESS",
        "FAILED",
        "CANCELLED"
      ],
      "required": true,
      "default": "INITIATED"
    },
    "totalAmount": {
      "type": "component",
      "repeatable": false,
      "component": "report.price-item"
    },
    "razorpayOrderId": {
      "type": "customField",
      "options": {
        "uuid-format": "^UNID_[A-Za-z0-9]{8}$",
        "disable-regenerate": true,
        "disable-auto-fill": true
      },
      "customField": "plugin::strapi-advanced-uuid.uuid"
    },
    "payment": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::payment.payment",
      "mappedBy": "order"
    },
    "coupon": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::coupon.coupon",
      "inversedBy": "orders"
    },
    "billingDetails": {
      "type": "component",
      "repeatable": false,
      "component": "order.billing-details",
      "required": true
    },
    "razorpayReceipt": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "manualDiscountAmount": {
      "type": "decimal",
      "required": true
    }
  }
}
